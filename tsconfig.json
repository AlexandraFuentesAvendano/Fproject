{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "node"
        ],
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": true,
        "incremental": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "alwaysStrict": true,
        "declaration": false,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "**/*.spec.ts",
        "**/*.test.ts"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}